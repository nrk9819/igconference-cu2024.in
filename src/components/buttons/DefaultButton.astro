---
interface Props {
    link?: string,
    style?: "filled" | "outline"
}

const {link, style = "filled"} = Astro.props
---

<button class=`px-5 md:px-6 py-3 md:py-4 rounded-full font-medium leading-none transition ease-in-out duration-300 hover:-translate-y-1 ${style === "filled" ? "bg-[#1A5112] text-white" : "bg-[#C4DEBD] border-2 border-[#1A5112] text-[#1A5112]"}`>
    {link ?  (<a href={link}> <slot/> </a>) : <slot/>}
</button>