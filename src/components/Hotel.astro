---
interface Props {
    name : String
    distance?: String
    rooms: String[]
    address? : String
    contacts? : String[]
    mapLink : URL
}

const {name,distance,rooms,address,contacts,mapLink} = Astro.props
---

<div class=`w-full flex flex-col md:flex-row gap-8 mb-6 p-5 pb-8 md:p-6 border border-[#FFE4D0] rounded-lg bg-[#FFF5EC]`>
    <div class="w-full md:w-64 h-64 p-4 rounded-md bg-[#FFE9DC]">
        <img src="/icons/hotel.svg" alt="hotles">
    </div>
    <div class="text-gray-800">
        <p class="mb-4 text-xl font-semibold">{name}</p>
        {distance && <p class="mb-2.5"><span class="font-semibold">Distance: </span> {distance}</p>}
        <div class="mb-2.5">
            <p class="mb-1 font-semibold">Rooms Available: </p>
            {rooms.map(room => <p class="ml-6 mb-1 text-gray-600">{room}</p>)}
        </div>
        {address && <p class="mb-2.5"><span class="font-semibold">Address: </span> {address}</p>}
        {contacts && <p class="mb-2.5"><span class="font-semibold">Contact: </span> {contacts.map((contact,index) => <span>{index!==0 && ", "} {contact}</span>)}</p>}
        {mapLink && <a href={mapLink} target="_blank" class="font-semibold text-blue-500">Open in google map <span>&#8599;</span></a>}
    </div>
</div>